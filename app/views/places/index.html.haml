%div.home{"ng-controller"=>"PlacesController as placesController", "ng-init" => "init();"}
  %h4.title
    A curated list of studios and schools for people who move.
  -#= link_to 'Test', new_user_registration_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}
  %nav.category-menu.menu.menu--trinculo
    %ul.menu__list
      - @categories.each_with_index do |cat, updateFilter|
        %li.menu__item{"ng-init" => "updateFilter('#{cat.name.downcase}');",
                        "ng-class" => "addCurrentClass('#{cat.name.downcase}')"}
          %a.menu__link{"ng-click" => "updateFilter('#{cat.name.downcase}');"} #{cat.name}
  %ul#rb-grid.rb-grid.clearfix
    -#- @resources.each_with_index do |resource, index|
    -#= render partial: 'places/card', locals: { resource: resource, index: index}
    %li{ :class => "animated {{place.category[0].name}} ico-{{place.category[0].name | lowercase}}",
          "ng-class" => "getCardClass($index)",
          "ng-repeat" => "place in places | filter: categoryComparer(filters) ",
          "on-finish-render" => "ngRepeatFinished",
          "ng-click" => "ClickThroughUpdate(place.id, place.name);"}
      %div.brand
        %img{ :alt => "{{place.name}}", :class => "logo", :height => "100", "ng-src" => "{{place.logo}}", :width => "100"}
      %h3.card-title {{place.name}}
      %span.rb-code {{place.postcode}}
      %a.fa.fa-facebook{:href => "http://www.facebook.com/{{place.facebook}}", "ng-show" => "place.facebook"}
      %a.fa.fa-twitter{:href => "http://www.facebook.com/{{place.twitter}}", "ng-show" => "place.twitter"}
      %a.fa.fa-instagram{:href => "http://www.facebook.com/{{place.instagram}}", "ng-show" => "place.instagram"}
      -#= render partial: 'places/overlay', locals: { resource: resource }
      = render partial: 'places/overlay'
-#- content_for :on_ready do
