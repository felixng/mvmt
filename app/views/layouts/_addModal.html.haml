%modal.ng-hide{:title => "Add a new place", "ng-show" => "showModal"}
  = simple_form_for(Place.new,
                    url: "/api/v1/places",
                    method: :post,
                    remote: true,
                    html:{role: :form, 'data-model' => 'place'},
                    input_html:{"data-remote" => true, "data-url" => "/api/v1/places", "data-type" => :json}) do |f|
    = f.error_notification

    .form-inputs
      = f.input :name
      = f.input :website
      = f.input :facebook
      = f.input :twitter
      = f.input :instagram
      = f.input :logo
      = f.association :category

    .form-actions
      = f.button :submit
